@model ContactModel

<div class="container my-5">
    <div class="row justify-content-center g-4">
        <!-- Cột: Bản đồ -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm rounded p-3 h-100">
                @if (!string.IsNullOrEmpty(Model?.Map))
                {
                    <div class="map-responsive mb-3">
                        @Html.Raw(Model.Map)
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model?.Description))
                {
                    <p>@Html.Raw(Model.Description)</p>
                }
            </div>
        </div>

        <!-- Cột: Thông tin liên hệ -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm rounded p-4 bg-light h-100">
                <h4 class="text-center mb-3">Thông tin liên hệ</h4>
                <p><strong>Tên:</strong> @(Model?.Name ?? "N/A")</p>
                <p><strong>Email:</strong> @(Model?.Email ?? "N/A")</p>
                <p><strong>Điện thoại:</strong> @(Model?.Phone ?? "N/A")</p>
            </div>
        </div>

        <!-- Cột: Facebook -->
        <div class="col-lg-4 col-md-12">
            <div class="card shadow-sm rounded p-3 h-100">
                <h5 class="text-center">Fanpage Facebook</h5>
                <div class="fb-page" data-href="https://www.facebook.com/hutechuniversity" data-tabs="message" data-width="" data-height="" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/hutechuniversity" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/hutechuniversity">HUTECH - Đại học Công nghệ Tp.HCM</a></blockquote></div>
            </div>
        </div>
    </div>
</div>

<style>
    .map-responsive {
        overflow: hidden;
        padding-bottom: 56.25%;
        position: relative;
        height: 0;
    }

        .map-responsive iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }
</style>
