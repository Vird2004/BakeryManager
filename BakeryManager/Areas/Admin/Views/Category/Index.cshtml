@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Category List";

}
<h3>List Category</h3>
<a asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            
            <th scope="col">Product Slug</th>
            <th scope="col">Category Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.Id))
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
             
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Edit Product</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Delete Product</a>
                </td>
            </tr>
        }

    </tbody>
</table>