@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Product List";

}
<h3>List Product</h3>
<a asp-action="Add" asp-controller="Product">Add Product</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Category</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.Id))
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="~/images/@item.Image" width="120px"></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Edit Product</a>
                    <a asp-action="Delete" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Delete Product</a>
                </td>
            </tr>
        }

    </tbody>
</table>