<table class="table table-responsive" id="myTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Phone</th>
            
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userWithRole in Model)
        {
            <tr>
                <td>@userWithRole.User.Id</td>
                <td>@userWithRole.User.UserName</td>
                <td>@userWithRole.User.Email</td>
                <td>@userWithRole.User.PhoneNumber</td>
                
                <td>@(userWithRole.RoleName)</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@userWithRole.User.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@userWithRole.User.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
